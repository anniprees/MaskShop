@using MaskShop.PagesCore.Common.Aids
@using MaskShop.PagesCore.Common.Extensions
@{
    Layout = "_Layout";
    ViewData["Title"] = Model.PageTitle;
    ViewData["Subtitle"] = Model.PageSubTitle ?? "Create";
}

<p>
    <h1>@ViewData["Title"]</h1>
</p>

<h4>@ViewData["Subtitle"]</h4>

<hr />
<div class="row">
    <div class="col-md-4">
        <form enctype="multipart/form-data" id="createForm"
              asp-page-handler="Create"
              asp-route-sortorder="@Model.SortOrder"
              asp-route-fixedFilter="@Model.FixedFilter"
              asp-route-fixedValue="@Model.FixedValue"
              asp-route-pageIndex="@Model.PageIndex"
              method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            @RenderBody()

            <input id="createButton" type="submit" value="Create" class="btn btn-primary" />
        </form>
    </div>
</div>

<a id="backToList"asp-page="./Index"
   asp-route-handler="Index"
   asp-route-sortorder="@Model.SortOrder"
   asp-route-fixedFilter="@Model.FixedFilter"
   asp-route-fixedValue="@Model.FixedValue">Back to Full List</a>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}